<lsf>
    <initials>
        <reference length="2" />
        <!-- axis length; "0" means no axis displayed -->
        <root id="root" />
        <!-- identifier of root node of the scene graph; this node -->
        <!-- must be defined in one of the following NODE declarations -->
    </initials>
    <views default="defaultCamera">
        <!-- at least one of the following type of cameras must be declared -->
        <perspective id="defaultCamera" near="0.1" far="500" angle="45">
            <from x="30" y="15" z="30" />
            <to x="0" y="-2" z="0" />
        </perspective>
        <ortho id="demoOrtho" near="0.2" far="100" left="-0.2" right="0.2" top="0.2" bottom="-0.2">
            <from x="5" y="0" z="10" />
            <to x="5" y="0" z="0" />
            <up x="0" y="1" z="0" /><!-- optional, default 0,1,0 -->
        </ortho>
    </views>

    <illumination>
        <ambient r="0.0" g="0.15" b="0.23" a="1.0" /> <!-- global ambient -->
        <background r="1.0" g="1.0" b="1.0" a="1.0" />  <!-- background color -->
    </illumination>


    <lights>
        <!-- NOTE: this block "light" must be repeated as necessary with different "id". At least one light should be present, and a maximum of eight lights is accepted. -->
        <light id="demoLight">  <!-- light identifier -->
            <enable value="1" />
            <!-- enable/disable -->
            <position x="10" y="12" z="9.5" w="1.0" /><!-- light position; w=1: point light; w=0: directional light -->
            <ambient r="0" g="0" b="0" a="1.0" />                   <!-- ambient component -->
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />             <!-- diffuse component -->
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />            <!-- specular component -->
        </light>
    </lights>


    <textures>
        <!-- NOTE: this block "TEXTURE" must be repeated as necessary with different "id" -->
        <texture id="demoTexture" path="./scenes/images/vidral.jpg" />
    </textures>


    <materials>
        <!-- NOTE: the "MATERIAL" block may be repeated as required. Each defined material
         requires a distinct "id". At least one material should be present. -->
        <material id="demoMaterial">
            <shininess value="ff" />
            <ambient r="1.0" g="0.0" b="0.0" a="1.0" />
            <diffuse r="0.6" g="0.0" b="0.0" a="1.0" />
            <specular r="0.6" g="0.0" b="0.0" a="1.0" />
            <emissive r="0.0" g="0.0" b="0.0" a="1.0" />
        </material>
    </materials>

    <nodes>
        <node id="root">            <!-- defines one intermediate node; may be repeated as necessary -->
            <!-- next two lines are mandatory -->
            <material id="demoMaterial" /><!-- this superimposes the material received from parent node id="null" maintains material from parent node -->

            <texture id="clear"><!-- declared texture superimposes the texture received from parent node id="null" maintains texture from parent node id="clear" clears texture declaration received from parent node -->
                <amplification afs="2.0" aft="2.0" /><!-- for primitives = dx/afs, dy/aft -->
            </texture>

            <!-- geom. transf. are optional and may be repeated, in any order, as necessary: -->
            <transformations>
                <!-- <translation x="0" y="1.0" z="1.0" /> -->
                <!-- <rotation axis="yy" angle="45" /> -->
                <!-- <scale sx="2" sy="1" sz="1" /> -->
            </transformations>

            <!-- declaring descendants, at least one node or one leaf must be present
             descendants may be mixed, nodes and leafs -->
            <descendants>
                <noderef id="x-wing" />
                <!-- "ss" is the identifier of a node or of leaf; -->
                <!-- may be repeated as necessary. It can refer an -->
                <!-- identifier of another node, before or later defined in the file. -->
                <!-- next lines define nodes of type leaf; may be repeated, in any order, as necessary -->

                <!-- <leaf type="rectangle" x1="0" y1="1" x2="1" y2="0" /> -->
                <!-- 2D coordinates on the XY plane for left-top and right-bottom vertices. -->
            </descendants>
        </node>
        <node id="x-wing">
            <material id="null" />
            <texture id="clear">
                <!-- <amplification afs="2.0" aft="2.0" />[> for primitives = dx/afs, dy/aft <] -->
            </texture>

            <transformations>
            </transformations>

            <descendants>
                <noderef id="body" />

                <noderef id="turbine1" />
                <noderef id="turbine2" />
                <noderef id="turbine3" />
                <noderef id="turbine4" />

                <!-- <noderef id="wing1" /> -->
                <!-- <noderef id="wing2" /> -->
                <!-- <noderef id="wing3" /> -->
                <!-- <noderef id="wing4" /> -->
            </descendants>
        </node>

        <node id="body">
            <material id="null" />
            <texture id="clear">
            </texture>

            <transformations>
            </transformations>

            <descendants>
                <noderef id="bodyBack" />
                <noderef id="bodyFront" />
            </descendants>
        </node>
        <node id="bodyBack">
            <material id="null" />
            <texture id="clear">
            </texture>

            <transformations>
                <scale sx="0.6" sy="1" sz="1" />
            </transformations>

            <descendants>
                <leaf type="cylinder" height="5.0" topRadius="5.0" bottomRadius="5.0" stacks="4" slices="6"/>
            </descendants>
        </node>
        <node id="bodyFront">
            <material id="null" />
            <texture id="clear">
            </texture>

            <transformations>
                <translation x="0.0" y="0.0" z="5.0" />
                <scale sx="0.6" sy="1" sz="1" />
            </transformations>

            <descendants>
                <noderef id="bodyNose" />
                <noderef id="bodyCockpit" />
            </descendants>
        </node>
        <node id="bodyNose">
            <material id="null" />
            <texture id="clear">
            </texture>

            <transformations>
            </transformations>

            <descendants>
                <leaf type="cylinder" height="12.0" topRadius="2.0" bottomRadius="5.0" stacks="6" slices="6"/>
            </descendants>
        </node>
        <node id="bodyCockpit">
            <material id="null" />
            <texture id="clear">
            </texture>

            <transformations>
                <translation x="0.0" y="4.2" z="0.0" />
            </transformations>

            <descendants>
                <noderef id="cockpitWindowCenter" />
                <noderef id="cockpitWindowLeft" />
                <noderef id="cockpitWindowRight" />
            </descendants>
        </node>
        <node id="cockpitWindowCenter">
            <material id="null" />
            <texture id="clear">
            </texture>

            <transformations>
                <rotation axis="xx" angle="-45" />
            </transformations>

            <descendants>
                <leaf type="rectangle" x1="1.0" y1="1.0" x2="-1.0" y2="-1.0" />
            </descendants>
        </node>
        <node id="cockpitWindowLeft">
            <material id="null" />
            <texture id="clear">
            </texture>

            <transformations>
                <translation x="1.0" y="0.0" z="0.0" />
                <rotation axis="yy" angle="45" />
            </transformations>

            <descendants>
                <leaf type="triangle" x1="0" y1="0" x2="0" y2="1.41" x3="-1.41" y3="0" />
            </descendants>
        </node>
        <node id="cockpitWindowRight">
            <material id="null" />
            <texture id="clear">
            </texture>

            <transformations>
                <translation x="-1.0" y="0.0" z="0.0" />
                <rotation axis="yy" angle="-45" />
            </transformations>

            <descendants>
                <leaf type="triangle" x1="0" y1="0" x2="0" y2="1.41" x3="1.41" y3="0" />
            </descendants>
        </node>

        <node id="turbine1">
            <material id="null" />
            <texture id="clear">
            </texture>

            <transformations>
                <translation x="-5.0" y="3.0" z="0.0" />
            </transformations>

            <descendants>
                <noderef id="turbine" />
            </descendants>
        </node>
        <node id="turbine2">
            <material id="null" />
            <texture id="clear">
            </texture>

            <transformations>
                <translation x="5.0" y="3.0" z="0.0" />
            </transformations>

            <descendants>
                <noderef id="turbine" />
            </descendants>
        </node>
        <node id="turbine3">
            <material id="null" />
            <texture id="clear">
            </texture>

            <transformations>
                <translation x="5.0" y="-3.0" z="0.0" />
            </transformations>

            <descendants>
                <noderef id="turbine" />
            </descendants>
        </node>
        <node id="turbine4">
            <material id="null" />
            <texture id="clear">
            </texture>

            <transformations>
                <translation x="-5.0" y="3.0" z="0.0" />
            </transformations>

            <descendants>
                <noderef id="turbine" />
            </descendants>
        </node>
        <node id="turbine">
            <material id="null" />
            <texture id="clear">
            </texture>

            <transformations>
            </transformations>

            <descendants>
                <noderef id="turbineSmall" />
                <leaf type="cylinder" height="4.0" topRadius="2.0" bottomRadius="2.0" stacks="4" slices="20"/>
            </descendants>
        </node>
        <node id="turbineSmall">
            <material id="null" />
            <texture id="clear">
            </texture>

            <transformations>
                <translation x="0.0" y="0.0" z="-4.0" />
            </transformations>

            <descendants>
                <leaf type="cylinder" height="4.0" topRadius="1.0" bottomRadius="1.0" stacks="4" slices="20"/>
            </descendants>
        </node>
    </nodes>
</lsf>
